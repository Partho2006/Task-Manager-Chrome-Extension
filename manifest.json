{
    "manifest_version": 3,
    "name": "Task Reminder Tool",
    "version": "1.0",
    "description": "A Simple Task reminder Chrome Extension.",
    "permissions": ["storage", "notifications"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "logo.png",
            "48": "logo.png",
            "128": "logo.png"
        }
    },
    "icons": {
        "16": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
    }
}